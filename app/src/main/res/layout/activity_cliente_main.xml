<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/includes_toolbar"/>

    <LinearLayout
        android:id="@id/linear_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/margin"
        android:paddingLeft="@dimen/margin"
        android:paddingRight="@dimen/margin"
        android:paddingTop="@dimen/margin" >

        <Button
            android:id="@id/cancelar"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/cancelar" />

        <Button
            android:id="@id/salvar"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/avancar" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/linear_item"
        android:padding="@dimen/margin"
        android:layout_below="@+id/toolbar"
        android:layout_alignLeft="@id/linear_item" >
    
    <LinearLayout
        android:id="@id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@id/primeiroNome"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Primeiro Nome"
                android:layout_weight="1"
                android:paddingTop="20.0dip" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@id/ultimoNome"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Ultimo Nome"
                android:layout_weight="1"
                android:paddingTop="20.0dip" >
            </EditText>

        </LinearLayout>



        <EditText
            android:id="@id/email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:paddingTop="20.0dip" />


        <!--<EditText-->
                <!--android:id="@+id/passwordField"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@+id/usernameField"-->
                <!--android:inputType="textPassword"-->
                <!--android:hint="Senha" />-->



            <EditText
                android:id="@id/endereco"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="EndereÃ§o"
                android:paddingTop="20.0dip" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@id/cep"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="CEP"
                android:inputType="phone"
                android:layout_weight="1"
                android:paddingTop="20.0dip" />

            <EditText
                android:id="@id/bairro"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Bairro"
                android:layout_weight="1"
                android:paddingTop="20.0dip" />
        </LinearLayout>

        <EditText
            android:id="@id/cidade"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Cidade"
            android:paddingTop="20.0dip" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecione um Estado"
            android:paddingTop="10dp"
            android:paddingLeft="5dp"
            style="@style/TextAppearance.AppCompat.Medium"/>

        <Spinner
            android:id="@id/estados"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:entries="@array/arrayStates"
            style="@style/Widget.AppCompat.Spinner"
            android:paddingTop="5dp"
            android:prompt="@string/estado" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@id/dataNascimento"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nascimento"
                android:inputType="date"
                android:layout_weight="1"
                android:paddingTop="20.0dip" />

            <EditText
                android:id="@id/telefone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_weight="1"
                android:hint="Telefone (com DDD)"
                android:inputType="text|phone"
                android:paddingTop="20.0dip" />
        </LinearLayout>

            <!--<EditText-->
                <!--android:id="@id/celular"-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:ems="10"-->
                <!--android:hint="Celular (com DDD)"-->
                <!--android:inputType="text|phone"-->
                <!--android:paddingTop="20.0dip" />-->

    </LinearLayout>
    
    </ScrollView>

</RelativeLayout>